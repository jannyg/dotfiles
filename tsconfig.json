{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "sourceMap": true,
      "paths": {
        "@components/*": ["src/components/*"]
      },
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
